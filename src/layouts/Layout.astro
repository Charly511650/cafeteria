---
import "../styles/global.css";
import Header from "@/components/ui/Header.astro";
import Footer from "@/components/ui/Footer.astro";

interface Props {
  title: String;
  subTitle?: String;
  bgImage?: String;
}
const { title, subTitle, bgImage } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&family=PT+Sans:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <title>Cafeteria desde 1939 : {title}</title>
  </head>
  <body class="bg-coffee-100">
    <Header bgImage={bgImage} subTitle={subTitle} />
    <main class="bg-white">
      <slot />
    </main>
    <Footer />
  </body>
</html>
