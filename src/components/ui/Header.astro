---
import Logo from "@/assets/logo.svg";
import MainNav from "@/components/ui/MainNav.astro";

interface Props {
  subTitle?: String;
  bgImage?: String;
}

const { subTitle, bgImage } = Astro.props;
console.log(bgImage);
---

<header class="min-h-72 relative pb-72">
  <div
    class="inset-0 absolute bg-center bg-cover"
    style={{ backgroundImage: `url(${bgImage})` }}
  >
  </div>
  <div class="inset-0 absolute bg-black/60"></div>
  <div class="relative max-w-7xl mx-auto py-3">
    <div class="flex flex-col items-center lg:flex-row justify-between">
      <a href="/">
        <Logo class="w-72" />
      </a>
      <MainNav />
    </div>
    <h3 class="text-4xl font-black uppercase text-white text-center mt-10">
      {subTitle}
    </h3>
  </div>
</header>
